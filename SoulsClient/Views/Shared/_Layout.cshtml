<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
    @Styles.Render("~/Content/CSS")
    @Styles.Render("~/Content/CSS/Base.css")
    <link rel="stylesheet" href="//ajax.googleapis.com/ajax/libs/jqueryui/1.10.4/themes/smoothness/jquery-ui.css" />
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-bottom">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("Application name", "Index", "Home", null, new { @class = "navbar-brand" })
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li>@Html.ActionLink("Home", "Index", "Home", new { area = "" }, null)</li>
                    <li>@Html.ActionLink("API", "Index", "Help", new { area = "" }, null)</li>
                    <li>@Html.ActionLink("Game", "Index", "Game", new { area = "" }, null)</li>
                    <li>@Html.ActionLink("Login", "Login", "Player", new { area = "" }, null)</li>
                    <li class="dropdown">
                        <a class="dropdown-toggle" data-toggle="dropdown" data-hover="dropdown" href="#">
                            Admin&nbsp;
                            <i class="fa fa-angle-down pull-right"></i>
                        </a>
                        <ul class="dropdown-menu">
                            <li>@Html.ActionLink("Players", "Players", "Admin", new { area = "" }, null)</li>
                            <li>@Html.ActionLink("Games", "Games", "Admin", new { area = "" }, null)</li>
                            <li>@Html.ActionLink("Card Editor", "CardEditor", "Admin", new { area = "" }, null)</li>
                        </ul>
                    </li>
                </ul>
            </div>
        </div>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/Scripts/jquery-ui-1.10.4.min.js")
    @Scripts.Render("~/Scripts/jquery.dialogextend.min.js")
    @Scripts.Render("~/bundles/bootstrap")
    @Scripts.Render("~/Scripts/Page/perfect-scrollbar.min.js")
    
    @RenderSection("scripts", required: false)


    <div class="
             page-wrapper
             col-lg-10
             col-lg-offset-1
             fill">

        <div class="
             page-logo
              col-lg-2
              col-lg-offset-5"></div>
   

        <div class="page-content
              col-lg-12
              col-lg-offset-0">
            @RenderBody()
        </div>
    </div>

    <script>
        $('.page-wrapper').perfectScrollbar(
            {
                suppressScrollX: true,
                includePadding: true
            });

    </script>


</body>
</html>
