@{
    ViewBag.Title = "Index";
}
@Html.Partial("~/Views/Shared/Player.cshtml");

<h2>Hansel's Card Shop</h2>

<table class="table">
    <tr>
        <th>
            Name
        </th>
        <th>
            Attack
        </th>
        <th>
            Health
        </th>
        <th>
            Armor
        </th>
        <th>
            Mana Cost
        </th>
        <th>
            Price
        </th>
        <th></th>
    </tr>

    @foreach (var card in ViewBag.cards)
    {
        <tr>
            <td>
                @card.name
            </td>
            <td>
                @card.attack
            </td>
            <td>
                @card.health
            </td>
            <td>
                @card.armor
            </td>
            <td>
                @card.cost
            </td>
            <td>
                @card.vendor_price
            </td>
            <td>
                @Html.ActionLink("Purchase", "Purchase", new { id = card.id })

            </td>
        </tr>
    }

    </table>



